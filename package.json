{
  "name": "electron-superapp",
  "version": "1.0.0",
  "description": "A modular superapp built with Electron and SQLite",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:renderer": "vite",
    "build": "vite build && electron-builder",
    "build:renderer": "vite build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "superapp", "sqlite", "miniapps"],
  "author": "SuperApp Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.superapp.electron",
    "productName": "SuperApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*",
      "node_modules/**/*"
    ]
  }
}