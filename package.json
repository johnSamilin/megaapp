{
  "name": "electron-superapp",
  "version": "1.0.0",
  "description": "A modular superapp built with Electron and SQLite",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd UI && npm run dev\" \"wait-on http://localhost:5173 && VITE_ENV=development electron .\"",
    "dev:renderer": "cd UI && npm run dev && cd ..",
    "build": "npm run build:renderer && electron-builder",
    "build:punky": "npm run build:renderer --mode punky && electron-builder",
    "build:renderer": "cd UI && npm run dev && cd ..",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "superapp",
    "sqlite",
    "miniapps"
  ],
  "author": "SuperApp Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "sass": "^1.92.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "roughjs": "^4.6.6",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.superapp.electron",
    "productName": "SuperApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*",
      "node_modules/**/*"
    ]
  }
}
